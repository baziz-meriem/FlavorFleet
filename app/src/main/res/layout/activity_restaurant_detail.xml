<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<FrameLayout
    tools:context=".RestaurantDetail"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/junk"
            android:scaleType="centerCrop"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="787dp"
        android:background="@drawable/bg"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/imageViewTopRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/burger"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            />

        <ImageView
            android:id="@+id/imageViewTopLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/cart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="326dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageViewTopRight"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="277dp"
            android:layout_marginEnd="46dp"
            android:gravity="center_horizontal"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:text="The Best Meal"
            android:textColor="#0C0C0C"
            android:textSize="32sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="123dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="123dp"
            android:drawableStart="@drawable/macdo"
            android:drawablePadding="10dp"
            android:text="MCDonald's"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView5"
            android:layout_alignEnd="@+id/textView4"
            android:layout_marginStart="46dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="1dp"
            android:layout_toEndOf="@+id/textView8"
            android:drawableStart="@drawable/phone_black"
            android:drawablePadding="4dp"
            android:text="Dial"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView5"
            android:layout_marginStart="41dp"
            android:layout_marginTop="14dp"
            android:layout_toEndOf="@+id/textView7"
            android:drawableStart="@drawable/review"
            android:drawablePadding="4dp"
            android:text="1.2K"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView5"
            android:layout_alignStart="@+id/textView4"
            android:layout_marginStart="42dp"
            android:layout_marginTop="14dp"
            android:drawableStart="@drawable/star"
            android:drawablePadding="4dp"
            android:text="4.8"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView8"
            android:layout_alignStart="@+id/textView7"
            android:layout_alignEnd="@+id/textView4"
            android:layout_marginStart="-27dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="5dp"
            android:paddingStart="18dp"
            android:paddingEnd="18dp"
            app:srcCompat="@drawable/line" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView3"
            android:layout_alignStart="@+id/imageView3"
            android:layout_alignEnd="@+id/imageView3"
            android:layout_marginStart="4dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="-7dp"
            android:padding="10dp"
            android:text="With only one week left to get the BTS Meal,new limited-time sauces back for more McNuggets.The BTS Meal has you  "
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/description"
            android:layout_alignStart="@+id/textView7"
            android:layout_alignEnd="@+id/textView4"
            android:layout_marginStart="-28dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="6dp"
            android:paddingStart="18dp"
            android:paddingEnd="18dp"
            app:srcCompat="@drawable/line" />

        <Button
            android:id="@+id/myButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/description"
            android:layout_alignStart="@+id/imageView4"
            android:layout_marginStart="48dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="47dp"
            android:layout_marginBottom="2dp"
            android:layout_toStartOf="@+id/price"
            android:background="@drawable/increment"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/description"
            android:layout_alignEnd="@+id/imageView4"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="59dp"
            android:layout_marginBottom="11dp"
            android:padding="6dp"
            android:text="300 DA "
            android:textColor="@color/secondary_dark"
            android:textSize="17sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/AddToCartButton"
            android:layout_width="248dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/myButton"
            android:layout_alignStart="@+id/imageView4"
            android:layout_alignEnd="@+id/imageView4"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="32dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/rounded_button"
            android:text="Add to cart"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />


    </RelativeLayout>

</FrameLayout>
</ScrollView>